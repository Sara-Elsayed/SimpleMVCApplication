@model List<Department>
@{
    ViewBag.Title = "Index";
}

<h2>Departments</h2>

<br/>
<br/>

@if (User.IsInRole("Admin"))
{

<a href="/departments/add" class="btn btn-primary"><span class="glyphicon glyphicon-plus">Add Departments</span></a>
}


<br />
@if (Model == null || Model.Count == 0)
{
    <h4>No Departments Found</h4>
}
else
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Department dept in Model)
            {
                <tr id="@dept.Id">
                    <td>@dept.Name</td>
                    <td>                        
                       @Html.Partial("_partialControl",dept.Id)
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

@section scripts {  
@Scripts.Render("~/bundles/confirmDelete")

    }

